%magic commands to overload the default glossaries package commands

\NewDocumentCommand{\acrodef}{m o m}{
  % #1 = shortname
  % #2 = optional acronym (if present)
  % #3 = long form

  \IfValueTF{#2}{
    % Optional acronym provided
    \newacronym{#1}{#2}{#3}
  }{
    % Optional acronym not provided
    \newacronym{#1}{#1}{#3}
  }
}



